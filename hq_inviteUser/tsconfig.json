{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ],
    "compilerOptions": {
        "strict": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "rootDir": "src",
        "declaration": true,
        "declarationMap": false,
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "target": "esnext"
    }
}